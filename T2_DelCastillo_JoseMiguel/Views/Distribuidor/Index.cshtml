@model IEnumerable<T2_DelCastillo_JoseMiguel.Models.Distribuidor>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container pt-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Distribuidores</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Distribuidor" asp-action="Crear" class="btn btn-primary">Nuevo Distribuidor</a>
        </div>
    </div>

    <br/>

    @if (Model.Count() >0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Nombre Distribuidor</th>
                    <th>Razon Social</th>
                    <th>Telefono</th>
                    <th>Año de Inicio</th>
                    <th>Contacto</th>
                </tr>
                
            </thead>

            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <th width="10%">@item.id</th>
                        <th width="20%">@item.nombreDistribuidor</th>
                        <th width="15%">@item.razonSocial</th>
                        <th width="15%">@item.telefono</th>
                        <th width="15%">@item.anioInicioOperacion</th>
                        <th width="15%">@item.contacto</th>
                        <th>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Distribuidor" asp-action="Editar" asp-route-Id="@item.id" class="btn btn-primary mx-2">Editar</a>
                                <a asp-controller="Distribuidor" asp-action="Eliminar" asp-route-Id="@item.id" class="btn btn-danger mx-2">Eliminar</a>
                            </div>
                        </th>
                    </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros de Categoría</p>
    }

</div>

